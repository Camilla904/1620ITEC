package enmerat_Season;

public enum Season {
	winter ("December through February"), 
	spring ("March through May"),
	summer ("June through August"),
	fall ("September through November");
	
	/* Each value in the list of values for the enum type invokes the constructor, 
	  passing it a character string that is then stored 
	  in the span variable of each string.*/	
	private String span;	
	Season(String months) {
		// TODO Auto-generated constructor stub
		span = months;
	}
	
	public String getSpan()
	{
		return span;
	}
}
